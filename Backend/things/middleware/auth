const jwt = require('jsonwebtoken');

require('dotenv').config(); // Load .env variables

const secret = process.env.JWT_SECRET;

console.log(secret);

console.log('JWT_SECRET:', secret ? 'Loaded' : 'Missing');

function authenticateToken(req, res, next) {
  const authHeader = req.headers['authorization'];
  const token = authHeader && authHeader.split(' ')[1];

  if (!token) {console.log('Token missing');return res.status(401).json({ error: 'Token required' })};

  jwt.verify(token, secret, (err, user) => {

    if (err) {
          console.log('Token missing1');
          return res.status(403).json({ error: 'Invalid or expired token' });}

    req.user = user; // This will be available in all routes
    next();
  });
}

module.exports = authenticateToken;
